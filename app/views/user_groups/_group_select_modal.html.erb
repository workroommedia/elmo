<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close group-cancel" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">
        <%= t("user.#{@mode_string}") %>
      </h4>
    </div>

    <div class="modal-body group-form">
      <%= select_tag("user-group", options_from_collection_for_select(@user_groups, :id, :name), id: "user-group") %>
    </div>

    <div class="modal-footer">
      <button type="button" class="btn btn-primary <%= @mode_string %>">
        <%= t("user.#{@mode_string}") %>
      </button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
